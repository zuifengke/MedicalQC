@{
    ViewBag.Title = "Header";
}

<!--header begin-->
<header id="amz-header" class="am-topbar-fixed-top header">

    <div class="am-topbar am-topbar-inverse">
        <h1 class="am-topbar-brand">
            <a href="/" class="am-text-ir">Amaze UI</a>
        </h1>

        <button class="am-topbar-btn am-topbar-toggle am-btn am-btn-sm am-btn-success am-show-sm-only " data-am-collapse="{target: '#doc-topbar-collapse'}"><span class="am-sr-only">导航切换</span> <span class="am-icon-bars"></span></button>

        <div class="am-collapse am-topbar-collapse" id="doc-topbar-collapse">
            <ul class="am-nav am-nav-pills am-topbar-nav">
                <li class="am-active"><a href="/index.html"><span class="am-icon-home">&nbsp;首页</span></a></li>
              
                <li class="am-dropdown" data-am-dropdown>
                    <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">
                        <span class="am-icon-book">&nbsp;学习资料 </span>&nbsp;<span class="am-icon-caret-down"></span>
                    </a>
                    <ul class="am-dropdown-content">
                        <li><a href="/qcarticle/index.htm?CategoryCode=guizhangzhidu">规章制度</a></li>
                        <li><a href="/qcarticle/index.htm?CategoryCode=zhiliaochanggui">治疗常规</a></li>
                        <li><a href="/qcarticle/index.htm?CategoryCode=binglishuxieguifan">病历书写规范</a></li>
                    </ul>
                </li>
            </ul>
            <!--站内搜索 begin-->
            <!--登录 start-->
            <div class="am-topbar-left">
                <ul class="am-nav am-nav-pills am-topbar-nav">
                    <!--站内搜索 end-->
                    <li class="amz-cse">

                        <form action="http://so.zyldingfang.com/search.aspx" method="get" target="_blank" class="cse-form">
                            <input type="text" required="" name="q" placeholder="搜搜看吧" autocomplete="off">
                            <button>
                                <span class="am-icon-search"></span>
                            </button>
                        </form>
                        <script>
                            var e, t = $("#amz-header").find(".amz-cse"), n = t.find('[name="q"]');
                            n.on("focus", function () {
                                t.addClass("am-active"),
                                clearTimeout(e)
                            }
                                ).on("blur", function () {
                                    e = setTimeout(function () {
                                        t.removeClass("am-active")
                                    }
                                    , 1e3)
                                }
                                )
                        </script>
                    </li>

                    <!--站内搜索 end-->
                </ul>
            </div>
            <div class="am-topbar-right" style="display:none" id="login">
                <button class="am-btn am-btn-primary am-topbar-btn am-btn-sm">
                    <span class="am-icon-user"></span>
                    <a href="/member/login.htm">登录</a>
                </button>
                <button class="am-btn am-btn-primary am-topbar-btn am-btn-sm">
                    <span class="am-icon-pencil"></span>
                    <a href="/member/register.htm">注册</a>
                </button>
                <!--<a href="/member/qqlogin" style="display:inline-block"><img alt="QQ互联登陆" src="~/Content/images/amazeui/Connect_logo_7.png" style="padding-top: 8px;"></a>-->
               
            </div>
            <!--登录 end-->
            <!--已登录 start-->
            <div class="am-topbar-right" style="display:none;" id="logined">
                <ul class="am-nav am-nav-pills am-topbar-nav">


                    <li class="am-dropdown" data-am-dropdown="">
                        <a class="am-dropdown-toggle " data-am-dropdown-toggle="" href="javascript:;">
                            <img alt="windy" id="picture" class="figure32" src="" data-bd-imgshare-binded="1">
                            <span class="am-icon-user" id="username">yehui1989个人中心</span>  <span class="am-icon-caret-down"></span>
                        </a>
                        <ul class="am-dropdown-content">
                            <li>
                                <a href="/member/personalinfo"><span class="am-icon-user am-text-primary"> 我的空间</span></a>
                            </li>

                            <li>
                                <a href="/blog/index.htm?mine=true"><span class="am-icon-rss-square am-text-primary"> 我的博客</span></a>
                            </li>

                            <li><a href="/member/loginout" onclick="QC.Login.signOut();"><span class="am-icon-power-off am-text-primary"> 安全退出</span></a></li>

                        </ul>
                    </li>

                </ul>
            </div>

            <script>
                $(document).ready(function () {
                    //设置AJax消息

                    $.getJSON("/member/checklogin", function (json) {
                        if (json.state == "login") {
                            $("#logined").hide();
                            $("#login").show();
                        }
                        else if (json.state == "logined") {
                            $("#logined").show();
                            $("#login").hide();
                            $("#username").text(json.username);

                            $("#picture").attr("src", json.picture);
                        }
                    });


                });
            </script>
           
            <!--已登录 end-->
        </div>
    </div>
</header>
<!--header end-->
