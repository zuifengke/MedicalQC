                    <script type="text/javascript" src="http://www.tngou.net/common/js/jquery.form.js"></script>
                    <script src="http://www.tngou.net/common/js/SHA1.js"></script>
                    <script type="text/javascript">
                        var $btn = $('#forum-user-login');
                        $('#f_email').focus();
                        var pwd = "";
                        $('#form_user').bind('form-pre-serialize', function (event, form, options, veto) {
                            pwd = $('#f_pwd').val();
                            $('#f_pwd').val(pwd);
                        });
                        $('#form_user').ajaxForm({
                            beforeSubmit: function (a, f, o) {
                                if ($('#f_email').val().length == 0) {
                                    $('#f_pwd').val(pwd);
                                    $('#f_email').focus();
                                    $('#error_msg').html("请输入登录的邮箱或者帐号或者手机号");
                                    $('#error_msg').show();
                                    return false;
                                }
                                if (pwd.length == 0) {
                                    $('#f_pwd').val(pwd);
                                    $('#f_pwd').focus();
                                    $('#error_msg').html("请输入登录密码");
                                    $('#error_msg').show();
                                    return false;
                                }
                                $('#error_msg').html("正在验证，请您耐心等待...");
                                $('#error_msg').show();
                                $btn.button('loading');
                            },
                            success: function (html) {
                                if (html.length > 0) {
                                    $('#error_msg').hide();
                                    $('#error_msg').html(html);
                                    $('#error_msg').show();
                                    $('#f_pwd').val(pwd);
                                    $btn.button('reset');
                                } else {
                                    setTimeout(function () {
                                        if ('@returnurl' == "")
                                            location.href = "/";
                                        else
                                            location.href = "@returnurl";
                                        $btn.button('reset');
                                    }, 1000)
                                }
                            }
                        });
                        //-->
                    </script>





